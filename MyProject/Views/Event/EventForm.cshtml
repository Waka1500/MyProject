@model MyProject.ViewModels.EventFormViewModel

@{
    ViewBag.Title = "EventForm";
}

<h2>New Event</h2>

@using (Html.BeginForm("Save", "Event"))
{
    @Html.ValidationSummary(true, "Please fix the following errors:");
    <div class="form-group">
        @Html.LabelFor(e => e.Name)
        @Html.TextBoxFor(e => e.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(e => e.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(e => e.EventTypeId)
        @Html.DropDownListFor(e => e.EventTypeId, new SelectList(Model.EventTypes, "Id", "Name"), "Select type of event", new { @class = "form-control" })
        @Html.ValidationMessageFor(e => e.EventTypeId)
    </div>
    <div class="form-group">
        @Html.LabelFor(e => e.StartTime)
        @Html.TextBoxFor(e => e.StartTime, new { @class = "form-control" })
        @Html.ValidationMessageFor(e => e.StartTime)
    </div>
    <div class="form-group">
        @Html.LabelFor(e => e.EndTime)
        @Html.TextBoxFor(e => e.EndTime, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(e => e.Description)
        @Html.TextAreaFor(e => e.Description, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(e => e.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-success">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}



